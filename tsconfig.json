{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"],
            "@middlewares/*": ["./src/middlewares/*"],
            "@handlers/*": ["./src/handlers/*"],
            "@utils/*": ["./src/utils/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
}
