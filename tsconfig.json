{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "noImplicitAny": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "."
    },
    "include": [
      "src/**/*.ts",
      ".eslintrc.json"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
